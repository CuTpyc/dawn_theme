<div class="social-links-section">
    <div class="container">
      <div class="social-links-grid">
        {% for block in section.blocks %}
          <div class="social-block">
            <p class="social-title">{{ block.settings.social_name }}</p>
            <a href="{{ block.settings.social_link }}" class="social-link" target="_blank">
              {{ block.settings.social_value }}
              <span class="icon-arrow">â†—</span>
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  

  {% schema %}
  {
    "name": "Social Links Section",
    "settings": [],
    "blocks": [
      {
        "type": "social_link", 
        "name": "Social Link Block",
        "settings": [
          {
            "type": "text",
            "id": "social_name",
            "label": "Social Platform Name",
            "default": "Gmail"
          },
          {
            "type": "text",
            "id": "social_value",
            "label": "Social Link Text",
            "default": "example.lorem@gmail.com"
          },
          {
            "type": "url",
            "id": "social_link",
            "label": "Social Link URL",
            "default": "/collections"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Social Links",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}
  

{% style %}
.social-links-grid {
  display: flex;
  gap: 20px;
}

.social-block {
  background-color: #f7f7f7;
  padding: 20px;
  border-radius: 10px;
  text-align: left;
  flex: 1;
}

.social-title {
  color: #888;
  font-size: 14px;
  margin-bottom: 10px;
}

.social-link {
  color: #0073e6;
  font-size: 18px;
  display: flex;
  align-items: center;
  text-decoration: none;
}

.social-link .icon-arrow {
  margin-left: 8px;
  font-size: 16px;
  color: #0073e6;
}
{% endstyle %}