<link rel="stylesheet" href="{{ 'custom-hero.css' | asset_url }}">
<div class="hero-section">
    
  <div class="swiper">
        <div class="swiper-wrapper">

          {% for product in collections['protein'].products %}
            
            <div class="swiper-slide">  
                <div class="content-left">
                    <div class="product-text">
                        <div class="product-title">
                            <h2 class="text">{{ product.title }}</h2>
                            {% for variant in product.variants %}
                                <span> {{ variant.weight }} {{ variant.weight_unit }} </span>
                            {% endfor %}
                        </div>
                        <p class="product-description"> {{ product.description }}</p>  
                    </div>
                    <div class="product-button">Buy now {{ product.price | money }}</div>
                </div>
                <div class="content-right">
                    <img src="{{ product.featured_image | image_url: width: 1100, height: 861 }}" alt="THP Logo" width="1100" height="861" /> 
                </div>
            </div>
            
          {% endfor %}
          
        </div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
  </div>
</div>
<script src="{{ 'swiper.js' | asset_url }}" defer></script>