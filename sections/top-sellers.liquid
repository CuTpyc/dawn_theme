<link rel="stylesheet" href="{{ 'top-sellers.css' | asset_url }}">

<div class="top-sellers-section" style="background-color: {{ section.settings.section_background_color }}">
  <div class="title-container" style="text-align: {{ section.settings.title_alignment }};">
    <h2>{{ section.settings.main_title }}</h2>
    <p class="main-subtitle">{{ section.settings.main_subtitle }}</p>
  </div>
  
  <div class="swiper top-seller-swiper-container">
    <div class="swiper-wrapper top-sellers-grid-swiper-wrapper">
  {% if section.settings.use_top_sellers %}
    {% assign top_products = collections["top-sellers"].products %}

    {% for product in top_products %}
      <div class="swiper-slide top-seller-card" 
           style="background-color: {{ section.settings.top_seller_background_color }}; color: {{ section.settings.top_seller_text_color }};">
        <div class="top-seller-text">
          <div class="top-seller-title">
            <h3>{{ product.title }}</h3>
            <a href="{{ product.url }}" class="product-link" target="_blank">
              <svg xmlns="http://www.w3.org/2000/svg" fill="{{ section.settings.top_seller_text_color }}" width="25" height="25">
                <path d="M7 7h8.586L5.293 17.293l1.414 1.414L17 8.414V17h2V5H7v2z"/>
              </svg>
            </a>
          </div>
          <div class="top-seller-description">
            <p>{{ product.description | strip_html }}</p>
          </div>
        </div>
        <div class="top-seller-image">
          <img src="{{ product.featured_image | image_url: width: 570, height: 570 }}" alt="{{ product.title }}" width="570" height="570">
        </div>
      </div>
    {% endfor %}

  {% else %}
    {% for block in section.blocks %}
      {% if block.type == 'product' and block.settings.product != blank %}
        {% assign product = all_products[block.settings.product] %}
        <div class="swiper-slide top-seller-card" 
             style="background-color: {{ block.settings.background_color | hex_to_rgba: block.settings.opacity }}; color: {{ block.settings.text_color }};">
          <div class="top-seller-text">
            <div class="top-seller-title">
              <h3>{{ product.title }}</h3>
              <a href="{{ product.url }}" class="product-link" target="_blank">
                <svg xmlns="http://www.w3.org/2000/svg" fill="{{ block.settings.text_color }}" width="25" height="25">
                  <path d="M7 7h8.586L5.293 17.293l1.414 1.414L17 8.414V17h2V5H7v2z"/>
                </svg>
              </a>
            </div>
            <div class="top-seller-description">
              <p>{{ product.description | strip_html }}</p>
            </div>
          </div>
          <div class="top-seller-image">
            <img src="{{ product.featured_image | image_url: width: 570, height: 570 }}" alt="{{ product.title }}" width="570" height="570">
          </div>
        </div>
      {% endif %}
    {% endfor %}
  {% endif %}
</div>

    <div class="swiper-navigation">
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    let swiper; 
    let init = false; 

    function swiperMode() {
      let mobile = window.matchMedia('(max-width: 768px)');
      
      if (mobile.matches) {
        if (!init) {
          init = true;

          swiper = new Swiper('.top-seller-swiper-container', {
            slidesPerView: 1,
            spaceBetween: 100,
            navigation: {
              nextEl: '.swiper-button-next',
              prevEl: '.swiper-button-prev',
            },
          });
        }
      } else {
        if (init) {
          swiper.destroy();
          swiper = null; 
          init = false; 
        }
      }
    }

    window.addEventListener('load', function() {
      swiperMode();
    });

    window.addEventListener('resize', function() {
      swiperMode();
    });
  });
</script>

{% schema %}
{
  "name": "Top Sellers",
  "settings": [
    {
      "type": "text",
      "id": "main_title",
      "label": "Main Title",
      "default": "Discover our top sellers"
    },
    {
      "type": "textarea",
      "id": "main_subtitle",
      "label": "Main Subtitle",
      "default": "Lower your daily calorie intake and boost your metabolism with our best products."
    },
    {
      "type": "checkbox",
      "id": "use_top_sellers",
      "label": "Display Top Selling Products",
      "default": true
    },
    {
      "type": "color",
      "id": "section_background_color",
      "label": "Section Background Color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "Title Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Top Seller Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Card Background Color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "opacity",
          "label": "Background Opacity",
          "default": 1,
          "min": 0,
          "max": 1,
          "step": 0.1
        }
      ]
    },
    {
      "type": "collection",
      "name": "Top Sellers Collection",
      "settings": [
        {
          "type": "select",
          "id": "collection",
          "label": "Select Collection",
          "options": [
            {
              "value": "top-sellers",
              "label": "Top Sellers"
            },
            {
              "value": "another-collection",
              "label": "Another Collection"
            }
            // Добавьте другие коллекции здесь
          ],
          "default": "top-sellers"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Top Sellers",
      "category": "Custom"
    }
  ]
}
{% endschema %}
